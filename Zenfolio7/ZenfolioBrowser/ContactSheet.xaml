    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Content="Shrink It" Click="ShrinkIt"/>
                <Button Content="Embiggen" Click="Embiggen"/>
                <Button Content="Small" Click="SmallThumbnail"/>
                <Button Content="Medium" Click="MediumThumbnail"/>
                <Button Content="Large" Click="LargeThumbnail"/>
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Path=PhotoCollection}" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" Margin="20">
